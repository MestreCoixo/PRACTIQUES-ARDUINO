#include <LiquidCrystal.h>
LiquidCrystal lod(7, 8, 9, 10, 11, 12);

char valor;
String estado;

void setup()
{
  lod.begin(16, 2);
  Serial.begin(9600);
}

void loop()
{
  if (Serial.available())
  {
    valor = Serial.read();

    if (valor == 'A')
    {
      pantalla_LCD();
    }
  }
}

void pantalla_LCD()
{
  delay(30);
  while (Serial.available())
  {
    char c = Serial.read();
    estado += c;
  }
  if (estado.length() > 0)
  {
    lod.clear();
    lod.setCursor(0, 0);
    lod.print(estado);
    estado = "";
  }
}
